/* pages/me/adminlogin/adminlogin.wxss */
@import '../../style/weui.wxss';
page{
  height: 100%;
  background-size:100%;
}
 
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  padding: 0;
  box-sizing: border-box;
  background-color: white;
} 
 

/*表单内容*/
.login-from {
  margin-top: 60px;
  flex: auto;
  height:100%;
}
 
.weui-cell{
  padding:16px;
  position:relative;
  display:-webkit-box;
  display:-webkit-flex;
  display:flex;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}

/*按钮*/
.loginBtnView {
  margin-top: 0px;
  margin-bottom: 0px;
  padding-bottom: 0px;
} 
.loginBtn {
  width: 90%;
  height: 80rpx;
  line-height: 50rpx;
  margin-top: 75px;
  color: #fff;
  background-image: linear-gradient(313deg, #5abd8c 0%, #00ff81 100%);
	border-radius: 10rpx;
}

.nameImage, .keyImage {
	margin-right: 10px;
  /*margin-bottom: 10px;*/
  width: 14px;
	height: 14px;
}

.user-label{
	display:block;
	width:105px;
	word-wrap:break-word;
	word-break:break-all;
	justify-content: center;
  align-items: center;
}

.user-input{
		width:100%;
		border:0;
		outline:0;
		-webkit-appearance:none;
		background-color:transparent;
		font-size:10px;
		color:inherit;
		height:1.41176471em;
    line-height:1.41176471;
    /*height: auto;
    min-height: 0;
    line-height: inherit;*/
}
.user-cell{
	padding:16px;
	position:relative;
	display:-webkit-box;
	display:-webkit-flex;
	display:flex;
	-webkit-box-align:center;
	-webkit-align-items:center;
	align-items:center;
	/*justify-content: center;*/
}
.user-cell__hd{
	padding-right:16px;
	font-size:0;
}
.user-cell__bd{
	padding-left:16px;
}
.weui-input {
  height: auto;
  min-height: 0;
  line-height: inherit;
}

